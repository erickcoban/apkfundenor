<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp">

    <TextView
        android:text="Formulario Mobiliario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/MobHab"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione si tiene Roperos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tiene_roperos">

                    <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_noRop"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_siRop"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>

                <EditText
                    android:id="@+id/noRopMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Especifique la cantidad de Roperos"
                    android:visibility="gone"/>

                <TextView
                    android:text="Seleccione si tiene Camas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cantidad_camas">

                    <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_noCam"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_siCam"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/preg_cama"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/noCam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Especifique la cantidad de Camas"/>

                    <TextView
                        android:text="Seleccione si tipo de Cama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textStyle="normal|bold"
                        android:paddingTop="10dp"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cantidad_camasH">

                        <RadioButton
                            android:text="Tapesco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_tapesco"
                            android:layout_weight="1"
                            android:checked="true"/>

                        <RadioButton
                            android:text="Tabla"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_tabla"
                            android:layout_weight="1"
                            android:checked="false"/>

                        <RadioButton
                            android:text="Catre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_catre"
                            android:layout_weight="1"
                            android:checked="false"/>

                        <RadioButton
                            android:text="Petate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_petate"
                            android:layout_weight="1"
                            android:checked="false"/>

                        <RadioButton
                            android:text="Cama de Madera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_cama_madera"
                            android:layout_weight="1"
                            android:checked="false"/>

                        <RadioButton
                            android:text="Sumier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_sumier"
                            android:layout_weight="1"
                            android:checked="false"/>

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/MobCoci"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione si tiene Plateras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cantidad_plateras">

                    <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_noPla"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Si"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_siPla"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>

                <EditText
                    android:id="@+id/noPlaMob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Especifique la cantidad de Plateras"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:visibility="gone"/>

                <TextView
                    android:text="Seleccione si tiene Mesas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tiene_mesas"
                        android:layout_weight="1">

                        <RadioButton
                            android:text="No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_noMes"
                            android:layout_weight="1"
                            android:checked="true"/>

                        <RadioButton
                            android:text="Si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_siMes"
                            android:layout_weight="1"
                            android:checked="false"/>

                    </RadioGroup>

                    <EditText
                        android:id="@+id/noMesa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Especifique la cantidad de Mesas"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:visibility="gone"/>

                    <TextView
                        android:text="Seleccione si tiene Sillas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textStyle="normal|bold"
                        android:paddingTop="10dp"
                        android:textSize="16sp"
                        android:layout_weight="1" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cantidad_sillas"
                        android:layout_weight="1">

                        <RadioButton
                            android:text="No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_noSil"
                            android:layout_weight="1"
                            android:checked="true"/>

                        <RadioButton
                            android:text="Si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_siSil"
                            android:layout_weight="1"
                            android:checked="false"/>

                    </RadioGroup>

                    <EditText
                        android:id="@+id/noSil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Especifique la cantidad de Sillas"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:visibility="gone"/>

                    <TextView
                        android:text="Seleccione si tiene Estufa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:textStyle="normal|bold"
                        android:paddingTop="10dp"
                        android:textSize="16sp"
                        android:layout_weight="1" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cantidad_estufa"
                        android:layout_weight="1">

                        <RadioButton
                            android:text="No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_noEst"
                            android:layout_weight="1"
                            android:checked="true"/>

                        <RadioButton
                            android:text="Si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_siEst"
                            android:layout_weight="1"
                            android:checked="false"/>

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/preg_coci"
                        android:visibility="gone">
                        <TextView
                            android:text="Seleccione el tipo de Estufa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:textStyle="normal|bold"
                            android:paddingTop="10dp"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:inputType="number"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tipo_estufa"
                            android:layout_weight="1">

                            <RadioButton
                                android:text="Plancha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_plancha"
                                android:layout_weight="1"
                                android:checked="true"/>

                            <RadioButton
                                android:text="Lorena"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_lorena"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Fundenor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_fundenor"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Onil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_onil"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Trebe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_trebe"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Tres Piedras"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_tres_piedras"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Polleton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_polleton"
                                android:layout_weight="1"
                                android:checked="false"/>

                            <RadioButton
                                android:text="Chimenea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_chimenea"
                                android:layout_weight="1"
                                android:checked="false"/>

                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/preg_trebe"
                            android:visibility="gone">

                            <TextView
                                android:text="Especifique si el Trebe se encuentra en el suelo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView10"
                                android:textStyle="normal|bold"
                                android:paddingTop="10dp"
                                android:textSize="16sp"
                                android:layout_weight="1" />

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/lugar_trebe"
                                android:layout_weight="1">

                                <RadioButton
                                    android:text="No"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rb_noTre"
                                    android:layout_weight="1"
                                    android:checked="true"/>

                                <RadioButton
                                    android:text="Si"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rb_siTre"
                                    android:layout_weight="1"
                                    android:checked="false"/>

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

            </LinearLayout>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/fechaMobiliario"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarMobiliario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agregar Mobiliario" />

            </LinearLayout>

    </ScrollView>


</LinearLayout>