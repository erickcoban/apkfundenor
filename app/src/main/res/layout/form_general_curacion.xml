<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp">

    <TextView
        android:text="Formulario de CuraciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Seleccione las Enfermedades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/enfer_comunes">


                <CheckBox
                    android:text="Peste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbPeste"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Viruela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbViruela"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Respiratorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbRespi"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Parasitos Internos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbParInt"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Parasitos Externos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbParExt"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Gumboro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbGumboro"
                    android:layout_weight="1" />

            </RadioGroup>

            <TextView
                android:text="Seleccione tipos de Medicamentos que usa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uso_med">


                <CheckBox
                    android:text="Plantas Naturales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbPlantas"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Vacunas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbVacu"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Pastillas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbPast"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Otro Medicamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbOtroMed"
                    android:layout_weight="1" />

            </RadioGroup>

            <TextView
                android:text="Seleccione que Vacunas utiliza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uso_vac">


                <CheckBox
                    android:text="Triple Aviar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbTripeA"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Viruela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbViruelaVac"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="New Castle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbNewCas"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Otro Vacuna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbOtraVac"
                    android:layout_weight="1" />

            </RadioGroup>

            <EditText
                android:id="@+id/noVacunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Cuantas veces a utilizado las Vacunas"/>

            <TextView
                android:text="Quien a Vacunado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/quien_vacuno">


                <CheckBox
                    android:text="Cuenta Propia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbCuePro"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Facilitador Fundenor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbFalFun"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Grupo Vecinos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbGrupVec"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Participante Fundenor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbPartFund"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Otro Vacuno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbOtroVac"
                    android:layout_weight="1" />

            </RadioGroup>

            <TextView
                android:text="Ultimo Mes que Vacuno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mes_vacuna">

                <RadioButton
                    android:text="Enero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_eneV"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Febrero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_febV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Marzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_marV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Abril"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_abrV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Mayo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_mayV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Junio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_junV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Julio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_julV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Agosto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_agoV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Septiembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_sepV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Octubre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_octV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Noviembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_novV"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Diciembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_dicV"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Meses en las que han muerto mas "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/meses_muerte">


                <CheckBox
                    android:text="Enero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbEneM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Febrero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbFebM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Marzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbMarM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Abril"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbAbrM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Mayo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbMayM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Junio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbJunM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Julio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbJulM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Agosto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbAgoM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Septiembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbSepM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Octubre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbOctM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Noviembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbNovM"
                    android:layout_weight="1" />

                <CheckBox
                    android:text="Diciembre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbDicM"
                    android:layout_weight="1" />

            </RadioGroup>

            <EditText
                android:id="@+id/noMuertes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="Escriba el promedio de muertes que ha tenido"/>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/fechaCuracion"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarCuracion"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="Agregar" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>