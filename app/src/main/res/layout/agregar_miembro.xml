<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1">

    <TextView
        android:text="Formulario de Vivienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_numeroVivienda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Escriba el Identificador de la Vivienda">
                <requestFocus />
            </EditText>

            <TextView
                android:text="Seleccione el tipo de pared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_pared">

                <RadioButton
                        android:text="Madera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_madera"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_block"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Palo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_palo"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Bambu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_bambu"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="TaÃ±il"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_tanil"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Costal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_costal"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Nylon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_nylon"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Mixto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_mixto"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Sin Pared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_sin_pared"
                        android:layout_weight="1"
                        android:checked="false"/>

            </RadioGroup>

            <TextView
            android:text="Seleccione el tipo de techo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:paddingTop="10dp"
            android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_techo">

                <RadioButton
                    android:text="Lamina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_lamina"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Paja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_paja"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Nylon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_nylon_2"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Costal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_costal_2"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Malla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malla"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Sin Techo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_sin_techo"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Seleccione el tipo de piso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_piso">

                <RadioButton
                    android:text="Tierra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tierra"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Cemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_cemento"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Piedras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_piedras"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Arena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_arena"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Cuenta con Divisiones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tiene_divisiones">

                <RadioButton
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_no"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_si"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Seleccione tipo de acceso de agua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/acceso_agua">

                <RadioButton
                    android:text="Entubada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_entubada"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Potable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_potable"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Pozo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_pozo"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Quebrada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_quebrada"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Nacimeinto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_nacimiento"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Rio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_rio"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="En que almacena el agua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/almacena_agua">

                <RadioButton
                    android:text="Tinaco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tinaco"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Toneles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_toneles"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Cubeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_cubeta"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Botella"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_botella"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Tanque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tanque"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_otro"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <EditText
                android:id="@+id/otroTipoAlmacen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Especifique el otro tipo de almacen"
                android:visibility="gone">
            </EditText>

            <TextView
                android:text="TÃ©cnica de purificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/purifica_agua">

                <RadioButton
                    android:text="Clorada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_clorada"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Hervida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_hervida"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Ecofiltro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_ecofiltro"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Ninguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_ninguna"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/fechaVivienda"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarId"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="Agregar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
