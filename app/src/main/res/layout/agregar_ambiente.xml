<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1">

    <TextView
        android:text="Formulario de Ambientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Seleccione el tipo de ambienre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ambientes">

                <RadioButton
                    android:text="Habitaci칩n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_habitacion"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Cocina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_cocina"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Ducha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_ducha"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Letrina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_letrina"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Lavadero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_lavadero"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Seleccione el tipo de Divisi칩n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_paredDA">

                <RadioButton
                    android:text="Madera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_maderaD"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_blockD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Palo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_paloD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Bambu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bambuD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Ta침il"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tanilD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Costal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_costalD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Nylon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_nylonD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Mixto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_mixtoD"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Sin Pared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_sin_paredD"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Seleccione el tipo de Pared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_paredA">

                <RadioButton
                        android:text="Madera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_maderaA"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_blockA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Palo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_paloA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Bambu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_bambuA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Ta침il"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_tanilA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Costal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_costalA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Nylon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_nylonA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Mixto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_mixtoA"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <RadioButton
                        android:text="Sin Pared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_sin_paredA"
                        android:layout_weight="1"
                        android:checked="false"/>

            </RadioGroup>

            <TextView
            android:text="Seleccione el tipo de techo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="normal|bold"
            android:paddingTop="10dp"
            android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_techoA">

                <RadioButton
                    android:text="Lamina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_laminaA"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Paja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_pajaA"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Nylon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_nylon_2A"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Costal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_costal_2A"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Malla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_mallaA"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Sin Techo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_sin_techoA"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Seleccione el tipo de piso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tipo_pisoA">

                <RadioButton
                    android:text="Tierra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_tierraA"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Cemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_cementoA"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Piedras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_piedrasA"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Arena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_arenaA"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Mantenimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/acceso_agua">

                <RadioButton
                    android:text="Bueno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Malo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <TextView
                android:text="Limpieza del ambiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/almacena_agua">

                <RadioButton
                    android:text="Bueno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bueno2"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_regular2"
                    android:layout_weight="1"
                    android:checked="false"/>

                <RadioButton
                    android:text="Malo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_malo2"
                    android:layout_weight="1"
                    android:checked="false"/>

            </RadioGroup>

            <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/fechaRegAmb"
            android:layout_gravity="center_horizontal"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarAmbiente"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:text="Agregar Ambiente" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
