<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp">

    <TextView
        android:text="Formulario Accesorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LHabitacion"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione accesorios de HabitaciÃ³n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/acc_habit">

                    <CheckBox
                        android:text="Almohadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/almohadas"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Chamarras / Ponchos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chamarras"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Espejo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/espejo"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Palita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/palita"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Escoba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/escoba"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Sabanas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sabanas"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Peine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/peine"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ningunoHA"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LCocina"
                android:visibility="gone">
                <TextView
                    android:text="Seleccione accesorios de Cocina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/acc_cocina">

                    <CheckBox
                        android:text="Salero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/salero"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Azucarera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/azucarera"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Cubiertos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cubiertos"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Cuchillos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cuchillos"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ningunoCO"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LLetrina"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione accesorios de Letrina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/acc_letrina">

                    <CheckBox
                        android:text="Basurero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/basurero"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Porta Toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/porta_toilet"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Toilet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toilet"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Prensa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/prensa"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Olotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/olotes"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Plantas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plantas"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Toallas Sanitarias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toallas_sani"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Toallitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toallitas"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Tuza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tuza"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ninguno_letrina"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LDucha"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione accesorios de Ducha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/acc_ducha">

                    <CheckBox
                        android:text="Jabon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jabon"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Shampoo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shampoo"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Toallero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toallero"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Toalla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/toalla_ducha"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Detergente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detergente_ducha"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Pashte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pashte"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ninguno_ducha"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/LLavadero"
                android:visibility="gone">

                <TextView
                    android:text="Seleccione accesorios de Lavadero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/acc_lava">

                    <CheckBox
                        android:text="Cepilleros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cepilleros"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Cepillo de Dientes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cepillo_diente"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Jabon de Ropa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jabon_ropa"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Detergente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detergente_lava"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Cepillo de Ropa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cepillo_ropa"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Pasta Dental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pasta_dental"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Jabon de Trastos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jabon_trastos"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="pasthe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pashte_lava"
                        android:layout_weight="1"
                        android:checked="false"/>

                    <CheckBox
                        android:text="Ninguno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ninguno_lava"
                        android:layout_weight="1"
                        android:checked="false"/>

                </RadioGroup>
            </LinearLayout>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/fechaAccesorio"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarAccesorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agregar Accesorios" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>