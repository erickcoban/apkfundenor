<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp">

    <TextView
        android:text="Formulario de Producción"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Seleccione que tiene en Producción"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <CheckBox
                        android:text="GALLINAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbGallina"
                        android:checked="false"/>
                    <CheckBox
                        android:text="GALLOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbGallo"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="POLLITOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbPollitos"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="PATOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbPatos"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="PATAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbPatas"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="CHUNTAS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbChuntas"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="CHUNTOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbChuntos"
                        android:layout_weight="1" />
                    <CheckBox
                        android:text="CHUNTIOS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cbChuntios"
                        android:layout_weight="1" />
                </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LGallinas">

                <TextView
                    android:text="GALLINAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/noGallinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodGallina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendeGallina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumeGallina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LGallos">

                <TextView
                    android:text="GALLOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noGallos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodGallos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendeGallos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumeGallos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LPollitos">

                <TextView
                    android:text="POLLITOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noPollitos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodPollitos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendePollitos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumePollitos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LPatos">

                <TextView
                    android:text="PATOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noPatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodPatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendePatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumePatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LPatas">

                <TextView
                    android:text="PATAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noPatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodPatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendePatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumePatas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LChuntas">

                <TextView
                    android:text="CHUNTAS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noChuntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodChuntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendeChuntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumeChuntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LChuntos">

                <TextView
                    android:text="CHUNTOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noChuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodChuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendeChuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumeChuntos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/LChuntios">

                <TextView
                    android:text="CHUNTIOS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textStyle="normal|bold"
                    android:paddingTop="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/noChuntios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba la cantidad que tiene"/>

                <EditText
                    android:id="@+id/noReprodChuntios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas tiene para producción"/>

                <EditText
                    android:id="@+id/noVendeChuntios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas vende"/>

                <EditText
                    android:id="@+id/noConsumeChuntios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Escriba cuantas Consume"/>

            </LinearLayout>

            <TextView
                android:text="Las aves se ecuentran encerradas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textStyle="normal|bold"
                android:paddingTop="10dp"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:text="No"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_noProd"
                    android:layout_weight="1"
                    android:checked="true"/>

                <RadioButton
                    android:text="Si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_siProd"
                    android:layout_weight="1" />
            </RadioGroup>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/fechaProduccion"
                android:layout_gravity="center_horizontal"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnAgregarProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agregar Producción" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>